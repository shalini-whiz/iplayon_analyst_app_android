<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="5dp"
    android:background="@drawable/lighter_background">
    
    <TextView
		android:id="@+id/sequenceTitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:gravity="center_horizontal"
		android:textColor="@color/textColor"
		android:padding="5dp"
		android:text="Sequence"
		android:background="@color/websiteHeader"/>
     
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="5dp"
		android:weightSum="10"
		>
	    <TextView
			android:id="@+id/player1Value"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:gravity="center_horizontal"
			android:textSize="16sp"
			android:layout_weight="4" 
			android:textColor="@color/playerColor"
			android:textStyle="bold"
			android:padding="5dp"
			android:background="@color/lighterevenblue"/>
		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="2"/>
	    		     
	    <TextView
			android:id="@+id/player2Value"
			android:layout_width="0dp"
			android:layout_height="match_parent"		
			android:gravity="center_horizontal"
			android:textSize="16sp"
			android:layout_weight="4"
			android:textColor="@color/opponentColor"
			android:textStyle="bold"
			android:padding="5dp"
			android:background="@color/lighteroddblue"
			/>
	    
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="4">    
			
	    <ImageView
			android:id="@+id/player1ServiceImg"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:src="@drawable/tennis_25"
			android:layout_weight="1"
			android:visibility="invisible"
			/>	
					
		<ImageView
			android:id="@+id/player1Img"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:src="@drawable/trophy_25"
			android:layout_weight="1"
			android:visibility="invisible"/>
				
		
		
		<ImageView
			android:id="@+id/player2ServiceImg"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:src="@drawable/tennis_25"
			android:layout_weight="1"
			android:visibility="invisible"/>	
					
		
		<ImageView
			 android:id="@+id/player2Img"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:src="@drawable/trophy_25"
			 android:layout_weight="1"
			 android:visibility="invisible"/>
		
		
			
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="8"
	>  
		<TextView
			android:id="@+id/player1pointsHeader"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:layout_weight="2" 
			android:text="@string/setpoints"
			android:textColor="@color/subHeader"/>
				    		
		<TextView
			android:id="@+id/player1Points"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:layout_weight="2"
			android:textColor="@color/playerColor"
			/>
	    <TextView
		    android:id="@+id/player2pointsHeader"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:layout_weight="2" 
			android:text="@string/setpoints"
			android:textColor="@color/subHeader" />
				
		<TextView
			android:id="@+id/player2Points"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:layout_weight="2" 
			android:textColor="@color/opponentColor"
			/>
	</LinearLayout>
  

	   
	<ListView
		android:id="@+id/viewStrokes"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="100"
		android:transcriptMode="alwaysScroll"
		android:layout_marginBottom="20dp"
		>
	</ListView>

	<TextView
		android:layout_width="92dp"
		android:layout_height="wrap_content"
		android:text="@string/ok"
		android:layout_gravity="center|center_horizontal|center_vertical"
		android:gravity="center"
		android:background="@color/websiteHeader"
		android:id="@+id/dialogOk"
		android:textSize="14sp"
		android:padding="5dp"/>


	<View
		android:layout_width="fill_parent"
		android:layout_height="5dp"
		/>
	

	
	   	 
</LinearLayout>
