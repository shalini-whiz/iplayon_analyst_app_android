<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/customReceiveAnalyticsLayout"
 >
 
   <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:padding="5dp"
         >
    <TextView
        android:id="@+id/serviceHand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/hightlightColor"
        android:padding="5dp"
        android:layout_weight="0.3"
		android:layout_gravity="center_horizontal"  
		android:gravity="center_horizontal"
    	android:duplicateParentState="true"
    	android:text="xxx"
    	
    	
			    	
     />
    
    <TextView
        android:id="@+id/serviceDestination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/hightlightColor"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"  
		android:gravity="center_horizontal"
        android:layout_weight="0.3"
            	android:text="xxx"
        
     />
    
    <TextView
        android:id="@+id/winShot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/hightlightColor"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"  
		android:gravity="center_horizontal"
		android:layout_weight="0.3"
		    	android:text="xxx"
		
     />
    
    
     <TextView
        android:id="@+id/serviceCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/hightlightColor"
        android:layout_gravity="center_horizontal"  
		android:gravity="center_horizontal"
        android:padding="5dp"
        android:layout_weight="0.1"
     />
    </LinearLayout>
    
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:id="@+id/displayInfo"
         android:visibility="gone"
         
         >
         
         
        <TextView
	        android:id="@+id/viewShotHandName"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textSize="14sp"
	        android:textColor="@color/playerColor"
	        android:padding="5dp"
	        android:layout_weight="0.3"
			android:layout_gravity="center_horizontal"  
			android:gravity="center_horizontal"
	    	android:duplicateParentState="true"
			         android:visibility="gone"
			
     	/>
    
	 <TextView
	        android:id="@+id/viewShotDestinationName"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textSize="14sp"
	        android:textColor="@color/playerColor"
	        android:padding="5dp"
	        android:layout_weight="0.3"
			android:layout_gravity="center_horizontal" 
	        android:gravity="center_horizontal"	
	       	         android:visibility="gone"
	       	
	     />    
	   <TextView
	        android:id="@+id/viewWinShot"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textSize="14sp"
	        android:textColor="@color/playerColor"
	        android:padding="5dp"
	        android:layout_weight="0.3"
			android:layout_gravity="center_horizontal" 
	        android:gravity="center_horizontal"	
	                android:visibility="gone"
	       	
	     />   
	 <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"  
		android:gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="@color/hightlightColor"
        android:padding="5dp"
        android:layout_weight="0.1"
        android:text="1"
        android:visibility="invisible"
      
     />
     </LinearLayout>
   

</LinearLayout> 