<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@android:color/transparent">
    
<LinearLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:id="@+id/profileLayout"
	android:gravity="center|center_vertical|center_horizontal"
	android:layout_margin="25dp"
	android:background="@color/white"
     >

	<View
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_marginTop="18dp"
		android:padding="5dp"/>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:textColor="@color/websiteHeader"
			android:layout_gravity="center_horizontal|center_vertical|center"
			android:gravity="center_horizontal|center_vertical|center"
			android:textSize="16sp"
			android:src="@drawable/user_icon"
			android:background="@color/disabled"
		/>


	<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:orientation="horizontal"
	        >
	        <TextView
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="0.3"
					android:textColor="@color/labelColor"
					android:layout_gravity="start"
					android:gravity="start"
					android:textSize="14sp"
					android:text="@string/nameLabel"
				/> 
				
				<TextView
		            android:id="@+id/playerName"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="0.7"
					android:textColor="@color/playerColor"
					android:gravity="start"
					android:textSize="14sp"
				/> 
				
		</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:orientation="horizontal"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.3"
			android:textColor="@color/labelColor"
			android:layout_gravity="start"
			android:gravity="start"
			android:textSize="14sp"
			android:text="@string/genderLabel"
			/>

		<TextView
			android:id="@+id/playerGender"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.7"
			android:textColor="@color/playerColor"
			android:layout_gravity="start"
			android:gravity="start"
			android:textSize="14sp"
			/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:orientation="horizontal"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.3"
			android:textColor="@color/labelColor"
			android:layout_gravity="start"
			android:gravity="start"
			android:textSize="14sp"
			android:text="@string/cityLabel"
			/>

		<TextView
			android:id="@+id/playerCity"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.7"
			android:textColor="@color/playerColor"
			android:gravity="start"
			android:textSize="14sp"
			/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:orientation="horizontal"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.3"
			android:textColor="@color/labelColor"
			android:layout_gravity="start"
			android:gravity="start"
			android:textSize="14sp"
			android:text="@string/stateLabel"
			/>

		<TextView
			android:id="@+id/playerState"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.7"
			android:textColor="@color/playerColor"
			android:gravity="start"
			android:textSize="14sp"
			/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:orientation="horizontal"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.3"
			android:textColor="@color/labelColor"
			android:layout_gravity="start"
			android:gravity="start"
			android:textSize="14sp"
			android:text="Sport:"/>

		<TextView
			android:id="@+id/interestedSport"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.7"
			android:textColor="@color/playerColor"
			android:layout_gravity="start"
			android:gravity="start"
			android:textSize="14sp"/>

	</LinearLayout>

