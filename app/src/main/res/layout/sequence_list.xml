<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/customSequenceLayout"
    >
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.9"
        android:id="@+id/sequenceLayout">
        
        <TextView
	        android:id="@+id/sequencePlayer"
	        android:layout_gravity="center|fill_horizontal"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.3"
	        android:textSize="14sp"
	        android:textColor="@color/playerColor"
	        android:gravity="center_horizontal"/>
        
        <TextView
	        android:id="@+id/sequenceOpponent"
	        android:layout_gravity="center|fill_horizontal"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.3"
	        android:textSize="14sp"        
	        android:textColor="@color/playerColor"
	        android:gravity="center_horizontal"/>
          
        <TextView
	        android:id="@+id/sequenceDate"
	        android:layout_gravity="center|fill_horizontal"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.3"
	        android:textSize="14sp"
	        android:textColor="@color/playerColor"
	        android:gravity="center_horizontal|center_vertical"/>  
	        
    </LinearLayout>

    <ImageView
        android:id="@+id/sequenceDelete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/minus" />

</LinearLayout>
